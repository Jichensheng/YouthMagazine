<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/notification_contanier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>
    <ImageView
        android:id="@+id/img_song"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="1dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/notification_img_holder"
    />

    <LinearLayout
        android:id="@+id/song_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/linear_righht"
        android:layout_toRightOf="@+id/img_song"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="@dimen/notification_fadingEdgeLength"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#535353"
            android:textSize="16sp"
        />
        <TextView
            android:id="@+id/tv_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="@dimen/notification_fadingEdgeLength"
            android:padding="5dp"
            android:singleLine="true"
            android:text="胡夏"
            android:textColor="#8c8c8c"
            android:textSize="@dimen/notification_singer_size"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_righht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
    >
        <ImageButton
            android:id="@+id/img_play"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:background="@drawable/notification_selector"
            android:scaleType="centerInside"
            android:src="@mipmap/notification_pause"
        />
        <ImageButton
            android:id="@+id/img_next"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:background="@drawable/notification_selector"
            android:scaleType="centerInside"
            android:src="@mipmap/notification_next"
        />
        <ImageButton
            android:id="@+id/img_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/notification_selector"
            android:scaleType="centerInside"
            android:src="@mipmap/notification_close"
        />
    </LinearLayout>

</RelativeLayout>