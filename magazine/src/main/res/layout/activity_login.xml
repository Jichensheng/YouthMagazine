<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/login_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center" android:orientation="vertical"
        android:padding="50dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ydqn_white"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:text="Youth Of Yzu"
            android:textColor="@color/light_gray"
            android:textSize="17sp"
        />
        <com.jcs.magazine.widget.SuperEditText
            android:id="@+id/set_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="手机号码"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            app:cursor="@drawable/cursor"
            app:ic_delete="@drawable/delete_click"
            app:ic_left_click="@drawable/ic_left_click_phone"
            app:ic_left_unclick="@drawable/ic_left_click_phone"
            app:lineColor_click="@color/white"
            app:lineColor_unclick="@color/white"
            app:linePosition="1"
            android:visibility="gone"

        />
        <LinearLayout
            android:id="@+id/phone_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
        >
            <com.jcs.magazine.widget.SuperEditText
                android:id="@+id/set_sms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:hint="验证码"
                android:singleLine="true"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                app:cursor="@drawable/cursor"
                app:ic_delete="@drawable/delete_click"
                app:ic_left_click="@drawable/ic_left_click_sms"
                app:ic_left_unclick="@drawable/ic_left_click_sms"
                app:lineColor_click="@color/white"
                app:lineColor_unclick="@color/white"
                app:linePosition="1"
                android:visibility="gone"

            />

            <Button
                android:id="@+id/btn_get_sms"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_btn"
                android:text="获取验证码"
                android:minWidth="100dp"
                android:textColor="@color/dark_gray"
                android:visibility="gone"
            />
        </LinearLayout>

        <com.jcs.magazine.widget.SuperEditText
            android:id="@+id/set_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="昵称"
            android:singleLine="true"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            app:cursor="@drawable/cursor"
            app:ic_delete="@drawable/delete_click"
            app:ic_left_click="@drawable/ic_left_click"
            app:ic_left_unclick="@drawable/ic_left_click"
            app:lineColor_click="@color/white"
            app:lineColor_unclick="@color/white"

            app:linePosition="1"

        />
        <com.jcs.magazine.widget.SuperEditText
            android:id="@+id/set_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            app:cursor="@drawable/cursor"
            app:ic_delete="@drawable/delete_click"
            app:ic_left_click="@drawable/password_click"
            app:ic_left_unclick="@drawable/password_click"
            app:lineColor_click="@color/white"
            app:lineColor_unclick="@color/white"
            app:linePosition="1"

        />
        <com.jcs.magazine.widget.SuperEditText
            android:id="@+id/set_psw_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:cursor="@drawable/cursor"
            app:ic_delete="@drawable/delete_click"
            app:ic_left_click="@drawable/password_click"
            app:ic_left_unclick="@drawable/password_click"
            app:lineColor_click="@color/white"
            app:lineColor_unclick="@color/white"
            app:linePosition="1"

        />

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:text="忘记密码？"
            android:textColor="@color/white"
            android:textSize="12sp"
        />
        <Button
            android:id="@+id/btn_withe"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_btn"
            android:text="登录"
            android:textColor="@color/dark_gray"
        />
        <Button
            android:id="@+id/btn_trans"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/regist_btn"
            android:text="注册"
            android:textColor="@color/white"
        />
    </LinearLayout>
</RelativeLayout>