<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/back"
              android:orientation="vertical">
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="- ONE STORY -"
        android:textColor="#afafaf"
        android:textSize="14sp"
    />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="白日梦"
        android:textColor="@android:color/black"
        android:textSize="17sp"
    />
    <TextView
        android:id="@+id/tv_athor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="文 / 正南七白"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
    />

    <com.jcs.magazine.widget.CDView
        android:id="@+id/cd_music"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="他语气坦率，当然也有点低落。她觉得这才是\n他真正说话的样子。"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1天前"
            android:textColor="#cfcfcf"
            android:textSize="12sp"
        />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        />
        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10086"
                android:textColor="#cfcfcf"
                android:textSize="12sp"/>
            <ImageView
                android:id="@+id/imv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bubble_like"
            />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="·  "
            android:textColor="#d7d7d7"
            android:textSize="12sp"/>
        <ImageView
            android:id="@+id/imv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bubble_share"
        />
    </LinearLayout>
</LinearLayout>